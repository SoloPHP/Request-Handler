{
  "name": "solophp/request-handler",
  "type": "library",
  "description": "Robust request validation & authorization layer for HTTP inputs with type-safe handlers and modern PHP 8+ architecture",
  "keywords": ["request", "validation", "authorization", "processing", "form", "php", "psr", "php8", "strict-types"],
  "license": "MIT",
  "authors": [
    {
      "name": "Vitaliy Olos",
      "email": "vedastudio@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Solo\\RequestHandler\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Solo\\RequestHandler\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^8.2",
    "psr/http-message": "^2.0",
    "solophp/contracts": "dev-main"
  },
  "suggest": {
    "solophp/validator": "^2.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^12.3",
    "phpstan/phpstan": "^2.1",
    "squizlabs/php_codesniffer": "^3.13"
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "scripts": {
    "test": "XDEBUG_MODE=coverage phpunit",
    "analyse": "phpstan analyse",
    "cs-check": "phpcs",
    "cs-fix": "phpcbf",
    "quality": [
      "@test",
      "@analyse",
      "@cs-check"
    ]
  }
}
